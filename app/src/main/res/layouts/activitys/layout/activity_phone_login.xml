<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <com.andy.myapplication.Title.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/手机号登录"
            android:textColor="@color/title"
            android:textSize="25sp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/line_gray">

        <TextView
                android:id="@+id/tv_name"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/dividerWidth_1"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/国家"
                android:textColor="@color/title"
                android:textSize="15sp"
        />
        <TextView
                android:text="@string/中国"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/请填写1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColorHint="#DCDCDC"
                android:id="@+id/et_country"
                android:textColor="@color/country"
                android:textSize="15sp"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/line_gray"
    >
        <TextView
                android:id="@+id/tv_phone2"
                android:layout_width="@dimen/dividerWidth_1"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/手机号"
                android:textColor="@color/title"
                android:textSize="15sp"
        />

        <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="@string/请填写手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="#DCDCDC"
                android:textSize="15sp"
                android:background="@null"
        />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/微信号登录2"
            android:textColor="@color/blue"
            android:textSize="15sp"
    />

    <TextView
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_button_noedit"
            android:text="@string/下一步"
            android:textColor="@color/green_next_noedit"
            android:textSize="15sp"
    />


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
            <TextView
                    android:id="@+id/tv_retrieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/找回密码"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
            />

            <View
                    android:id="@+id/divider"
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:layout_weight="1"/>

            <TextView

                    android:id="@+id/tv_urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/紧急冻结"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
            />
            <View
                    android:id="@+id/divider2"
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/微信安全中心"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>