<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>

    <com.andy.myapplication.Title.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
        <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/blue"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/手机号注册"
                android:textColor="@color/title"
                android:textSize="25sp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/line_gray"

        >
            <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/line_gray">
                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="@dimen/dividerWidth_1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingStart="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/昵称"
                        android:textColor="@color/title"
                        android:textSize="15sp"
                />

                <EditText
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/例如"
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:layout_marginTop="40dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColorHint="#DCDCDC"
                        android:textSize="15sp"
                />
            </LinearLayout>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:scaleType="centerCrop"
                    android:layout_gravity="bottom"
                    android:src="@drawable/picture"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/line_gray"
        >
            <TextView
                    android:id="@+id/tv_phone2"
                    android:layout_width="@dimen/dividerWidth_1"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/国家"
                    android:textColor="@color/title"
                    android:textSize="15sp"
            />

            <TextView
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/中国"
                    android:textColor="@color/country"
                    android:textSize="15sp"
            />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/line_gray"

        >
            <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="@dimen/dividerWidth_1"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/手机号"
                    android:textColor="@color/title"
                    android:textSize="15sp"
            />
            <EditText
                    android:id="@+id/et_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/请填写手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColorHint="#DCDCDC"
                    android:textSize="15sp"
            />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/line_gray"
        >
            <TextView
                    android:id="@+id/tv_name3"
                    android:layout_width="@dimen/dividerWidth_1"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/密码"
                    android:textColor="@color/title"
                    android:textSize="15sp"
            />
            <EditText
                    android:id="@+id/et_phone3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/填写密码"
                    android:inputType="textPassword"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="#DCDCDC"
                    android:textSize="15sp"
            />

        </LinearLayout>

        <TextView
                android:id="@+id/bt_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_button_noedit"
                android:gravity="center"
                android:text="@string/下一步"
                android:textColor="@color/green_next_noedit"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="@string/小字"
                android:textColor="@color/小字"
                android:textSize="13sp"
        />

    </LinearLayout>

</LinearLayout>